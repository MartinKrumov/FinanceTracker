<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="oauth2 jdbc token store" author="mkrumov">
        <createTable tableName="oauth_access_token">
            <column name="authentication_id" type="varchar(256)">
                <constraints primaryKey="true"/>
            </column>

            <column name="token_id" type="varchar(256)"/>

            <column name="token" type="bytea"/>

            <column name="user_name" type="varchar(256)"/>

            <column name="client_id" type="varchar(256)"/>

            <column name="authentication" type="bytea"/>

            <column name="refresh_token" type="varchar(256)"/>
        </createTable>

        <createTable tableName="oauth_refresh_token">
            <column name="token_id" type="varchar(256)"/>

            <column name="token" type="bytea"/>

            <column name="authentication" type="bytea"/>

        </createTable>
    </changeSet>

    <changeSet id="02_ccreate_store" author="mkrumov">
        <createTable tableName="app_user">
            <column name="user_email" type="varchar(128)">
                <constraints primaryKey="true"/>
            </column>

            <column name="user_pass" type="varchar(64)"/>
            <column name="user_role" type="varchar(64)"/>
        </createTable>
    </changeSet>

    <changeSet id="03_inser_data" author="mkrumov">
        <insert tableName="app_user">
            <column name="user_email">admin1@pm.com</column>
            <column name="user_pass">admin123</column>
            <column name="user_role">ROLE_ADMIN</column>
        </insert>
        <insert tableName="app_user">
            <column name="user_email">user1@pm.com</column>
            <column name="user_pass">user123</column>
            <column name="user_role">ROLE_USER</column>
        </insert>
    </changeSet>
</databaseChangeLog>